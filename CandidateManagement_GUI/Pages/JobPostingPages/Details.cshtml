@page
@model CandidateManagement_GUI.Pages.JobPostingPages.DetailsModel

@{
    ViewData["Title"] = " Job Posting Details"; 
    ViewData["ActivePage"] = "JobPosting";
    string? roleId = HttpContext.Session.GetString("RoleID");
    if (roleId != null && !roleId.Equals("1"))
    {
        Response.Redirect("/Error");
    }
}

<h1 class="text-center mt-4 text-primary">@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.JobPosting.JobPostingTitle)</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.JobPosting.Description)</dd>

            <dt class="col-sm-2">PostedDate</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.JobPosting.PostedDate)</dd>
        </dl>
    </div>
    <div class="mt-4 d-flex justify-content-center gap-3">
        <a asp-page="./Edit" asp-route-id="@Model.JobPosting.PostingId" class="btn btn-primary">Edit</a>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
