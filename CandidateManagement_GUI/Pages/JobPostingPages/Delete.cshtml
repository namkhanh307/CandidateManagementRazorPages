@page
@model CandidateManagement_GUI.Pages.JobPostingPages.DeleteModel

@{
    ViewData["Title"] = "Delete Job Posting";
    ViewData["ActivePage"] = "JobPosting";
    string? roleId = HttpContext.Session.GetString("RoleID");
    if (roleId != null && !roleId.Equals("1"))
    {
        Response.Redirect("/Error");
    }
}

<h1 class="text-center mt-4 text-danger">@ViewData["Title"]</h1>

<div class="container mt-5">
    <h3 class="text-warning">Are you sure you want to delete this job posting?</h3>
    <div class="card shadow-sm p-4 mt-4">
        <dl class="row">
            <dt class=""col-sm-3 fw-bold">Title</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.JobPosting.JobPostingTitle)</dd>

            <dt class=""col-sm-3 fw-bold">Description</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.JobPosting.Description)</dd>

            <dt class=""col-sm-3 fw-bold">Posted Date</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.JobPosting.PostedDate)</dd>
        </dl>
    </div>
    
    <form method="post" class="mt-4 d-flex justify-content-center gap-3">
        <input type="hidden" asp-for="JobPosting.PostingId" />
        <input type="submit" value="Delete" class="btn btn-danger" />   
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
