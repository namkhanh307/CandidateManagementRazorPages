@page
@model CandidateManagement_GUI.Pages.CandidateProfilePages.DetailsModel

@{
    ViewData["Title"] = "Candidate Profile Details";
    ViewData["ActivePage"] = "CandidateProfile";
    string? roleId = HttpContext.Session.GetString("RoleID");
    if (roleId != null && !roleId.Equals("1"))
    {
        Response.Redirect("/Error");
    }
}

<h1 class="text-center mt-4 text-primary">@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Full Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CandidateProfile.Fullname)</dd>

            <dt class="col-sm-3 fw-bold">Birthday</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CandidateProfile.Birthday)</dd>

            <dt class="col-sm-3 fw-bold">Short Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CandidateProfile.ProfileShortDescription)</dd>

            <dt class="col-sm-3 fw-bold">Profile URL</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CandidateProfile.ProfileUrl)</dd>

            <dt class="col-sm-3 fw-bold">Posting Title</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CandidateProfile.Posting.JobPostingTitle)</dd>
        </dl>
    </div>

    <div class="mt-4 d-flex justify-content-center gap-3">
        <a asp-page="./Edit" asp-route-id="@Model.CandidateProfile.CandidateId" class="btn btn-primary">Edit</a>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
