@page
@model CandidateManagement_GUI.Pages.CandidateProfilePages.EditModel

@{
    ViewData["Title"] = "Edit Candidate Profile";
    ViewData["ActivePage"] = "CandidateProfile";
    string? roleId = HttpContext.Session.GetString("RoleID");
    if (roleId != null && !roleId.Equals("1"))
    {
        Response.Redirect("/Error");
    }

}

<h1 class="text-center mt-4 text-primary">@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h4 class="text-secondary mb-3">Edit Profile Information</h4>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="CandidateProfile.CandidateId" />

            <div class="mb-3">
                <label asp-for="CandidateProfile.Fullname" class="form-label fw-bold"></label>
                <input asp-for="CandidateProfile.Fullname" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="CandidateProfile.Fullname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CandidateProfile.Birthday" class="form-label fw-bold"></label>
                <input asp-for="CandidateProfile.Birthday" class="form-control" placeholder="YYYY-MM-DD" />
                <span asp-validation-for="CandidateProfile.Birthday" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CandidateProfile.ProfileShortDescription" class="form-label fw-bold"></label>
                <input asp-for="CandidateProfile.ProfileShortDescription" class="form-control" placeholder="Short description" />
                <span asp-validation-for="CandidateProfile.ProfileShortDescription" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CandidateProfile.ProfileUrl" class="form-label fw-bold"></label>
                <input asp-for="CandidateProfile.ProfileUrl" class="form-control" placeholder="Profile URL" />
                <span asp-validation-for="CandidateProfile.ProfileUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CandidateProfile.Posting.JobPostingTitle" class="form-label fw-bold"></label>
                <select asp-for="CandidateProfile.PostingId" class="form-select" asp-items="ViewBag.PostingId"></select>
                <span asp-validation-for="CandidateProfile.PostingId" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
