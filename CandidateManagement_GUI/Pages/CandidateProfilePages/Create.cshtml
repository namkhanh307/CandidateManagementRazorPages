@page
@model CandidateManagement_GUI.Pages.CandidateProfilePages.CreateModel

@{
    ViewData["Title"] = "Create Candidate Profile";
    ViewData["ActivePage"] = "CandidateProfile";
    string? roleId = HttpContext.Session.GetString("RoleID");
    if (roleId != null && !roleId.Equals("1"))
    {
        Response.Redirect("/Error");
    }
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

<div class="container mt-5">
    <hr class="mb-4" />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="CandidateProfile.CandidateId" class="form-label fw-bold"></label>
                    <input asp-for="CandidateProfile.CandidateId" class="form-control" />
                    <span asp-validation-for="CandidateProfile.CandidateId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CandidateProfile.Fullname" class="form-label fw-bold"></label>
                    <input asp-for="CandidateProfile.Fullname" class="form-control" />
                    <span asp-validation-for="CandidateProfile.Fullname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CandidateProfile.Birthday" class="form-label fw-bold"></label>
                    <input asp-for="CandidateProfile.Birthday" type="date" class="form-control" />
                    <span asp-validation-for="CandidateProfile.Birthday" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CandidateProfile.ProfileShortDescription" class="form-label fw-bold"></label>
                    <input asp-for="CandidateProfile.ProfileShortDescription" class="form-control" />
                    <span asp-validation-for="CandidateProfile.ProfileShortDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CandidateProfile.ProfileUrl" class="form-label fw-bold"></label>
                    <input asp-for="CandidateProfile.ProfileUrl" type="text" class="form-control" />
                    <span asp-validation-for="CandidateProfile.ProfileUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CandidateProfile.Posting.JobPostingTitle" class="form-label fw-bold"></label>
                    <select asp-for="CandidateProfile.PostingId" class="form-select" asp-items="@ViewBag.PostingId"></select>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
